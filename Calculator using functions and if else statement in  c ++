#include <iostream>
using namespace std;
//creating function
int add(int a, int b)
{
	int c = a + b;
	return c;
}
int sub(int a, int b)
{
	int c = a - b;
	return c;
}
int multiply(int a, int b)
{
	int c = a * b;
	return c;
}
int divi(int a, int b)
{
	int c = a / b;
	return c;
}

int main()
{	
	//input and output to ask value to user
	int num1, num2;
	char op;
	cout << "please enter the first number" << endl;
	cin >> num1;
	cout << "please enter the second number" << endl;
	cin >> num2;
	cout << "please enter the operator i.e +,-,*,/" << endl;
	cin >> op;
	//if else statement to check what operation does user needs to do
	if (op == '+')
	{
		cout << "the sum is : " << add(num1, num2);
	}
	else if (op == '-')
	{
		cout << "the sum is : " << sub(num1, num2);
	}
	else if (op == '*')
	{
		cout << "the sum is : " << multiply(num1, num2);
	}
	else
	{
		cout << "the sum is : " << divi(num1, num2);
	}

	return 0;
}
