#include <string>
#include <iostream>
using namespace std;

int main()

{
	char c;
	char ch = 'y';
	cout << "Enter day number to show day name i.e (1-7) : ";
	cin >> c;

	switch (c)
	{
	case '1':
		cout << "Monday";
		break;
	case '2':
		cout << "Tuesday";
		break;
	case '3':
		cout << "Wednesday";
		break;
	case '4':
		cout << "thursday";
		break;
	case '5':
		cout << "Friday";
		break;
	case '6':
		cout << "Saturday";
		break;
	case '7':
		cout << "Sunday";
		break;
	default:
		cout << "invalid number = " ;
		break;
	}


	return 0;
}
